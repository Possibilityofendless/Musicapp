{
  "name": "musicapp",
  "version": "1.0.0",
  "description": "AI-powered music video generation with lip-sync",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/workers"
  ],
  "scripts": {
    "build": "npm run build --workspace backend",
    "start": "npm run start --workspace backend",
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "20.x"
  }
}
